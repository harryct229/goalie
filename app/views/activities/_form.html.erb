<%= simple_form_for @activity,
    :url => url_for(:action => 'create', :controller => 'activities'),
    :method => 'post' do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,"Submit" %>
  </div>
<% end %>
